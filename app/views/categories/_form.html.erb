<%= render 'shared/errors', object: @category %>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                <%= f.label :name %>  
                </div>
                <div class="col-sm-8">
                <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
                </div>
            </div>
            </div>   
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <%= f.submit class: "btn btn-danger btn-lg btn-xlarg-2" %>
                </div>
            </div>      
             <div class="col-sm-8 col-sm-offset-2">
                <%= link_to "Back to articles listing",   articles_path, class: "link" %>    
            </div>
        <% end %>
    </div>
</div>
