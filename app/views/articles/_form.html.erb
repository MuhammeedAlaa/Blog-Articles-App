<%= render 'shared/errors', object: @article %>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>  
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
        </div>
      </div>   
      <div class="form-group">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text } %>
            <% end %>
          </div>
        </div>
      </div>
        <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <%= f.submit class: "btn btn-danger btn-lg btn-xlarg-2" %>
                </div>
        </div>      
          <div class="col-sm-8 col-sm-offset-2">
            <%= link_to "Back to articles listing",   articles_path, class: "link" %>    
        </div>
        <% end %>
    </div>
</div>
