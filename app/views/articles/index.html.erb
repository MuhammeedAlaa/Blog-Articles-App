<h1>Articles</h1>
<%= link_to 'Create new article', new_article_path%>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
    </tr>
<% @articles.each do |article|%>
    <tr>
        <td>
            <%= article.title %>
        </td>
        <td>
            <%= article.description %>
        </td>
        <td>
            <%= link_to "Edit",   edit_article_path(article.id) %>
            <%= link_to "Show",   article_path(article.id) %>
            <%= link_to "Delete",   article_path(article.id), method: :delete, data: {confirm: "Are you sure you want to delete the article ?"} %>
        </td>
    </tr>
<% end %>
</table>
